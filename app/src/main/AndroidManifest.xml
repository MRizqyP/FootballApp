<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.r2rfootball">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.teamOverview.TeamOverview"
            android:label="@string/title_activity_team_overview"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".favorit.Favorit"
            android:label="@string/title_activity_nobass"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.matchOverview.Match"
            android:label="@string/title_activity_match"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".ui.teamOverview.Teams" />
        <activity android:name=".ui.matchOverview.MatchOverview" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>